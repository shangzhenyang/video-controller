{
	"manifest_version": 3,
	"name": "Video Controller",
	"version": "1.0",
	"description": "Control video playback speed and loop segments.",
	"permissions": ["activeTab", "scripting"],
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"all_frames": true,
			"run_at": "document_end"
		}
	]
}
